
<h1>Listing Articles</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
  </tr>

  <% @articles.each do |shruti| %>
    <tr>
      <td><%= shruti.title %></td>
      <td><%= shruti.text %></td>
      <td><%= link_to 'Show', bye_path(shruti) %></td>
      <td><%= link_to 'Edit', edit_path(shruti) %></td>
      <td><%= link_to 'Destroy', delete_path(shruti),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>